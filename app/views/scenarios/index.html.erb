<h3><i>Featured Scenarios</i></h3>

<table>
  <thead>
    <tr>
      <th>Scenario Content</th>
      <th colspan="3"<th>
    </tr>
  </thead>
  <tbody>
    <% @scenarios.each do |scenario| %>
      <tr>
        <td><i><%= truncate(scenario.content, :length => 35) %></i></td>
        <td><%= link_to "Read Scenario", scenario %></td>
        <td><%= link_to 'Select Scenario', scenario_path(scenario) %></td>
        <td><%= link_to 'Edit Scenario', edit_scenario_path(scenario) %></td>
        <td><%= link_to 'Destroy Scenario', scenario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

<% end %>

<br>

